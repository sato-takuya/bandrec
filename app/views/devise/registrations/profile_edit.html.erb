<div class="profile-edit-box">
<%= form_for current_user, url: {action: 'profile_update'} do |f| %>
<table border = "1">
  <tr>
  <div class="field">
      <td><%= f.label :name %></td>
      <td><%= f.text_field :name %></td>
  </tr>
  <tr>
      <td><%= f.label :user_type %></td>
    <td><%= f.radio_button "user_type",1%>加入希望 <%= f.radio_button "user_type",2%>メンバーを募集 <%= f.radio_button "user_type",3%>休憩<br></td>
  </tr>
  <tr>
  <td>パート</td>

    <% array = [] %>
    <td>
    <% if current_user.instruments %>
      <% current_user.instruments.each do |i| %>
        <% array << i.part.to_s %>
      <% end %>
    <% end %>

    <% if array.include?("1") %>
      <%= check_box "gakki", "1",:checked => true %>ボーカル
    <% else %>
      <%= check_box "gakki", "1"%>ボーカル
    <% end %>

    <% if array.include?("2") %>
      <%= check_box "gakki", "2",:checked => true %>ギター
    <% else %>
      <%= check_box "gakki", "2"%>ギター
    <% end %>

    <% if array.include?("3") %>
      <%= check_box "gakki", "3",:checked => true %>ベース
    <% else %>
      <%= check_box "gakki", "3"%>ベース
    <% end %>

    <% if array.include?("4") %>
      <%= check_box "gakki", "4",:checked => true %>キーボード
    <% else %>
      <%= check_box "gakki", "4"%>キーボード
    <% end %>

    <% if array.include?("5") %>
      <%= check_box "gakki", "5",:checked => true %>ドラム<br>
    <% else %>
      <%= check_box "gakki", "5"%>ドラム<br>
    <% end %>
    </td>
    </tr>

    <tr>
    <td><%= f.label :birthday %></td>
    <td><%= f.date_select :birthday,start_year: 1960,end_year: Time.current.year,use_month_numbers: true %></td>
    </tr>
    <% options = ["東京都"] %>

    <tr>
    <td><%= f.label :area %></td>
    <td><%= f.select :area,options %></td>
    </tr>

    <tr>
    <td><%= f.label :future %></td>
    <td><%= f.radio_button :future,1 %>プロを目指す <%= f.radio_button :future,2 %>趣味 </td>
    </tr>

    <tr>
    <td><%= f.label :info %></td>
    <td><%= f.text_area :info,cols:40, size: "60 x 16",:class => "prof-text-area" %><br></td>
    <tr>

    <tr>
    <td><%= f.label :image %></td>
    <td><%= f.file_field :profile_picture %></td>
    <tr>

    <tr>
    <td><%= f.label :sound_source %></td>
    <td><%= f.text_field :sound_source,size:30 %></td>
    <tr>

    <tr>
    <td><%= f.label :gender %></td>
    <td><%= f.radio_button :gender,1 %>男 <%= f.radio_button :gender,2 %>女 </td>
    </tr>

    <% options = [["---",nil],["会社員",1],["フリーター",2],["学生",3],["その他",4]] %>

    <tr>
    <td><%= f.label :job %></td>
    <td><%= f.select :job,options %></td>
    </tr>

    <tr>
    <td><%= f.label :band_type %></td>
    <td><%= f.radio_button :band_type,1 %>新規結成 <%= f.radio_button :band_type,2 %>活動(休止)中 </td>
    </tr>

    <tr>
    <td><%= f.label :song_type %></td>
    <td><%= f.radio_button :song_type,1 %>オリジナルが多い <%= f.radio_button :song_type,2 %>コピーが多い</td>
    </tr>
  <tr>
  <div class="actions">
    <td colspan="2"><%= f.submit "Update" %></td>
  </div>
  </tr>
</table>
<% end %>
</div>
