<div class="profile-edit-box">
<%= form_for current_user, url: {action: 'profile_update'} do |f| %>
  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %><br>
    <%= f.label :user_type %>
    <%= f.radio_button :user_type,1%>加入希望 <%= f.radio_button :user_type,2%>メンバーを募集 <%= f.radio_button :user_type,3%>休憩<br>

    <% array = [] %>

    <% if current_user.instruments %>
      <% current_user.instruments.each do |i| %>
        <% array << i.part.to_s %>
      <% end %>
    <% end %>

    <% if array.include?("1") %>
      <%= check_box "gakki", "1",:checked => true %>ボーカル
    <% else %>
      <%= check_box "gakki", "1"%>ボーカル
    <% end %>

    <% if array.include?("2") %>
      <%= check_box "gakki", "2",:checked => true %>ギター
    <% else %>
      <%= check_box "gakki", "2"%>ギター
    <% end %>

    <% if array.include?("3") %>
      <%= check_box "gakki", "3",:checked => true %>ベース
    <% else %>
      <%= check_box "gakki", "3"%>ベース
    <% end %>

    <% if array.include?("4") %>
      <%= check_box "gakki", "4",:checked => true %>キーボード
    <% else %>
      <%= check_box "gakki", "4"%>キーボード
    <% end %>

    <% if array.include?("5") %>
      <%= check_box "gakki", "5",:checked => true %>ドラム<br>
    <% else %>
      <%= check_box "gakki", "5"%>ドラム<br>
    <% end %>

    <%= f.label :birthday %>
    <%= f.date_select :birthday,start_year: 1960,end_year: Time.current.year,use_month_numbers: true %><br>
    <% options = ["東京都","埼玉県","神奈川県",'千葉県','北海道', '青森県', '岩手県', '宮城県', '秋田県',
    '山形県', '福島県', '茨城県', '栃木県', '群馬県', '新潟県','富山県', '石川県', '福井県', '山梨県', '長野県','岐阜県', '静岡県', '愛知県', '三重県', '滋賀県',
    '京都府', '大阪府', '兵庫県', '奈良県', '和歌山県','鳥取県', '島根県', '岡山県', '広島県', '山口県','徳島県', '香川県', '愛媛県', '高知県', '福岡県',
    '佐賀県', '長崎県', '熊本県', '大分県', '宮崎県',
    '鹿児島県', '沖縄県'] %>

    <%= f.label :area %>
    <%= f.select :area,options %><br>


    <%= f.label :gender %>
    <%= f.radio_button :gender,1 %>男 <%= f.radio_button :gender,2 %>女 <br>
    <% options = [["会社員",1],["フリーター",2],["学生",3],["その他",4]] %>

    <%= f.label :job %>
    <%= f.select :job,options %><br>

    <%= f.label :future %>
    <%= f.radio_button :future,1 %>プロを目指す <%= f.radio_button :future,2 %>趣味 <br>

    <%= f.label :info %>
    <%= f.text_area :info,cols:40, size: "70 x 20" %><br>

    <%= f.label :image %>
    <%= f.file_field :profile_picture %><br>

    <%= f.label :sound_source %>
    <%= f.text_field :sound_source,size:30 %>
  </div>

  <div class="actions">
    <%= f.submit "Update" %>
  </div>
<% end %>
</div>