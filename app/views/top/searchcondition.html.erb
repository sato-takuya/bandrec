<div class="search-box">
<h3>検索条件</h3>

<%= form_tag("/top/search", method: "get") do %>

<br>
<%= label :user_type,"ステータス(必須)" %>
<div class="btn-group btn-group-toggle" data-toggle="buttons">
  <label class="btn btn-info">
    <%= radio_button_tag :user_type,1 %>加入希望の人を探す
  </label>
  <label class="btn btn-info">
    <%= radio_button_tag :user_type,2 %>メンバーを募集している人を探す
  </label>

</div>

<br>
<br>

<span class="show-add">担当</span><span class="show-band">募集</span>パート：
<%= check_box_tag 'candidate[id][]', 1,:checked => true %>ボーカル
<%= check_box_tag 'candidate[id][]', 2,:checked => true %>ギター
<%= check_box_tag 'candidate[id][]', 3,:checked => true %>ベース
<%= check_box_tag 'candidate[id][]', 4,:checked => true %>キーボード
<%= check_box_tag 'candidate[id][]', 5,:checked => true %>ドラム<br>

<% array_area = ['東京都','大阪府','愛知県','北海道', '青森県', '岩手県', '宮城県', '秋田県',
    '山形県', '福島県', '茨城県', '栃木県', '群馬県',
    '埼玉県', '千葉県', '神奈川県', '新潟県',
    '富山県', '石川県', '福井県', '山梨県', '長野県',
    '岐阜県', '静岡県','三重県', '滋賀県',
    '京都府', '兵庫県', '奈良県', '和歌山県',
    '鳥取県', '島根県', '岡山県', '広島県', '山口県',
    '徳島県', '香川県', '愛媛県', '高知県', '福岡県',
    '佐賀県', '長崎県', '熊本県', '大分県', '宮崎県',
    '鹿児島県', '沖縄県'] %>

<br>
活動場所：<%= select_tag :area,options_for_select(array_area) %><br>

<br>

<div class='form-inline justify-content-center'>
キーワード：<%= text_field_tag :info,'',class: 'form-control' %><br>
</div>


<div class="show-add">

<br>
性別：<%= check_box_tag 'gender[id][]',1,:checked => true  %>男  <%= check_box_tag 'gender[id][]',2 ,:checked => true %>女<br>

<% array_age_first =  [*16..50] %>
<% array_age_end = [*0..50].reverse %>

<br>
年齢：<%= select_tag :age_start,options_for_select(array_age_first) %>才 から <%= select_tag :age_end,options_for_select(array_age_end) %>才<br>
</div>
<div class="show-band">
</div>

<br>
<%= label :user_type,"並び順" %>
<div class="btn-group btn-group-toggle" data-toggle="buttons">
  <label class="btn btn-info active">
    <%= radio_button_tag :order,1, {checked: true}  %>おすすめ順
  </label>
  <label class="btn btn-info">
    <%= radio_button_tag :user_type,2 %>登録が新しい順
  </label>

</div>
<br>
<%= submit_tag "検索" ,:class=>"btn btn-primary btn-lg my-4" %>
<% end %>
</div>